@model TheRustyCauldron_PFG.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

<div class="order-details-container">
    <h4>Order #@Html.DisplayFor(model => model.OrderId)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Potion.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Potion.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>

        @if (Model.ApplicationUser != null)
        {
            <dt>
                User ID
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ApplicationUserId)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to My Orders", "MyOrders")
</p>