@model TheRustyCauldron_PFG.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<style>
    main {
        background-image: url('/Content/img/identity/partchment3.jpg');
        opacity: 0.9;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #3d2d1d;
        font-family: 'Georgia', serif;
        padding: 20px;
        background-color: rgba(255, 255, 230, 0.8);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        max-width: 800px;
        margin: 20px auto;
    }

    h2 {
        color: #6a4a3b;
        border-bottom: 2px solid #b8860b;
        padding-bottom: 5px;
        margin-bottom: 15px;
    }

    hr {
        border-top: 1px solid #b8860b;
    }

    .col-form-label {
        color: #5e3a2a;
        font-weight: bold;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid #a0522d;
        color: #3d2d1d;
    }

        .form-control::placeholder {
            color: #8b4513;
        }

    .btn-outline-dark {
        color: #3d2d1d;
        border-color: #3d2d1d;
        background-color: transparent;
    }

        .btn-outline-dark:hover {
            color: #fff;
            background-color: #3d2d1d;
            border-color: #3d2d1d;
        }

    .text-danger {
        color: #dc3545 !important;
        font-weight: bold;
    }
</style>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change Password Form</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="mb-3 row">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3 row">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3 row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Change password" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}