@model TheRustyCauldron_PFG.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<style>
    /* Parchment Background and General Styling */
    main {
        background-image: url('/Content/img/identity/partchment3.jpg'); /* Adjust the path if needed */
        opacity: 0.9;
        background-size: cover; /* Cover the entire area */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        background-attachment: fixed; /* Keep the background fixed during scrolling */
        color: #3d2d1d; /* A dark brown, parchment-like color for text */
        font-family: 'Georgia', serif; /* A serif font for a classic look */
        padding: 20px; /* Add some padding around the content */
        /* Styles specifically for the main content box (now with parchment) */
        background-color: rgba(255, 255, 230, 0.8); /* Very light, slightly transparent off-white layer *on top* of the parchment */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
        max-width: 800px; /* Limit the width of the content */
        margin: 20px auto; /* Center the content */
    }

    h2 {
        color: #6a4a3b; /* A slightly darker brown for headings */
        border-bottom: 2px solid #b8860b; /* A golden border */
        padding-bottom: 5px;
        margin-bottom: 15px;
    }

    /* Styling for form elements to blend with parchment theme */
    hr {
        border-top: 1px solid #b8860b; /* Golden hr for consistency */
    }

    .col-form-label {
        color: #5e3a2a; /* Darker brown for labels */
        font-weight: bold;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.7); /* Slightly transparent input fields */
        border: 1px solid #a0522d; /* Sienna border */
        color: #3d2d1d; /* Dark text in input fields */
    }

        .form-control::placeholder {
            color: #8b4513; /* Lighter placeholder text */
        }

    .btn-outline-dark {
        color: #3d2d1d; /* Dark text for button */
        border-color: #3d2d1d; /* Dark border for button */
        background-color: transparent;
    }

        .btn-outline-dark:hover {
            color: #fff; /* White text on hover */
            background-color: #3d2d1d; /* Dark background on hover */
            border-color: #3d2d1d;
        }

    .text-danger {
        color: #dc3545 !important; /* Standard red for errors, adjust if you have a parchment-specific error color */
        font-weight: bold;
    }
</style>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change Password Form</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="mb-3 row">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3 row">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3 row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Change password" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}